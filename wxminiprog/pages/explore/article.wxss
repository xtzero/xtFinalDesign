/* pages/explore/article.wxss */
.xtBody{
  background-color: #EFEFF5;
  min-height: 100vh;
  width: 100%;
}

.card{
  background-color: white;
  margin: 20px 0;
}

.title-block{
  margin-top: 0;
  position: relative;
  width: 100%;
  height: 40vh;
}

.banner{
  width: 100%;
  height: 100%;
}

.title-container{
  position: absolute;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.3);
  height: 100%;
  width: 100%;
  z-index: 99999;
}

.titleAndAuthor{
  position: absolute;
  bottom: 5%;
  left: 0;
  width: 100%;
  color: white;
  z-index: 100000;
}

.title{
  font-size: 50rpx;
  padding: 0 10px;
}

.author{
  font-size: 35rpx;
  padding: 10px;
}

.content-block{
  margin-top: 0px;
}

.content-text{
  padding: 10px 0;
  padding: 20px 15px;
}

.content-br{
  height: 10px;
}

.colorSpan{
  background-color: #efeff5;
  margin: 5px 15px;
  padding: 10px 7px;
  padding-left: 15px;
  font-size: 35rpx;
  padding: 20px 5px;
}

.strongText{
  padding: 10px 0;
  font-weight: 700;
  padding: 20px 15px;
}

.content-image{
  margin: 20px 15px;
  width: calc(100% - 30px);
}

.source-block{
  padding: 10px 5px;
  font-size: 0.7em;
}

.tip,.time,.link{
  margin-top: 10px;
}

.link-link{
  color: blue;
  text-decoration: underline;
}

.bottomLine{
  width: 100%;
  text-align: center;
  font-size: 0.5em;
}