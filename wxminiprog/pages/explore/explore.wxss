/* pages/explore/explore.wxss */
.maincontainer{
  width: 100%;
  height: 100vh;
}

.banner{
  background-size: cover;
  background-position: center;
}

.banner>image{
  width: 100%;
  height: 600rpx;
}

.banner-container{
  width: 100%;
  height: 600rpx;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.4);
  font-size: 40rpx;
  line-height: 600rpx;
  text-align: center;
  color: white;
}

.loading{
  width: 100%;
  text-align: center;
  background-color: #efeff4;
  padding-top: 10px;
  font-size: 0.8em;
}

.article-block{
  position: relative;
  width: 100%;
  height: 600rpx;
}

.image{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 100;
}

.container{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0; 
  z-index: 101;
  background-color: rgba(0, 0, 0, 0.3);
}

.title{
  position: absolute;
  bottom: 45%;
  left: 0;
  width: 100%;
  color: white;
  z-index: 102;
  font-size: 40rpx;
  padding: 0 10px;
}