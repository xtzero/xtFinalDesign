.xtBody{
  background-color: #EFEFF5;
  min-height: 100vh;
  width: 100%;
}

.card{
  background-color: white;
  margin: 20px 0;
}

.user-block{
  display: flex;
  flex-direction: row;
  padding: 10px 0px;
}

.user-right{
  display: flex;
  flex-direction: column;
  margin: 0px 5px;
}

.usericon{
  width: 44px;
  height: 44px;
  border-radius: 22px;
  margin: 0px 10px;
}

.nickname{
  font-size: 16px;
}

.time{
  font-size: 12px;
  color: #BBBBBB;
}

.content{
  font-size: 16px;
  padding: 5px 10px 15px 10px;
}

.tip-block{
  width: 100%;
  height: 35px;
  display: flex;
  flex-direction: row;
  margin: 10px 0;
}

.tip-left{
  height: 35px;
  border-left: solid #34537C 10px;
  margin-left: 10px;
}

.tip-content{
  height: 35px;
  line-height: 35px;
  padding: 0 10px;
  font-size: 16px;
}

.tip-right{
  font-size: 12px;
  line-height: 35px;  
}

.image-block{
  display: flex;
  flex-direction: column;
}

.images{
  width: 100%;
  height: 70vh;
  margin: 2px 0;
}

.comment-card{
  margin: 1px 0 0 0;
}

.comment-block{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.comment-input{
  border-bottom: solid #ffffff 1px;
  margin: 2px 0;
  padding: 0 10px;
  width: 79%;
  align-self: center;
  border-right: solid gray 1px;
}

.comment-send{
  width: 20%;
  text-align: center;
  align-self: flex-end;
  padding: 10px 0;
}
