.container{
  background-color: #efeff4;
  display: flex;
  flex-direction: column;
}

.card{
  position: relative;
  /* width: 100%; */
  height: 500rpx;
  background-color: white;
  margin: 10px;
  display: flex;
  flex-direction: column;
  border: solid 1px white;
}

.card-header{
  position: absolute;
  display: flex;
  flex-direction: row;
  left: 0;
  top: 0;
  width: 100%;
  height: 54px;
  background-color: white;
}

.card-image{
  position: absolute;
  left: 0;
  top: 44px;
  width: 100%;
  height: 100%;
}

.card-header-image{
  width: 34px;
  height: 34px;
  border-radius: 17px;
  margin: 5px 10px;
  float: left;
}

.card-header-right{
  float: right;
  width: 90%;
  height: 54px;
  display: flex;
  flex-direction: column;
  padding-top: 2px;
}

.card-header-right-name,.card-header-right-time{
  width: 100%;
}

.card-header-right-name{
  color: #3B3D42;
  font-size: 14px;
}
.card-header-right-time{
  color: #B4B4B4;
  font-size: 13px;
}

.card-bottom{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 37px;
  display: flex;
  justify-content: flex-start;
  padding-left: 5px;
  float: left;
}

.card-bottom-item{
  display: flex;
  flex-direction: column;
  width: 44px;
  height: 37px;
}

.card-bottom-btn,.card-bottom-num{
  width: 20px;
  height: 20px;
  margin-top: 8px;
}

.image{
  width: 50vw;
  height: 50vh;
  background-color: firebrick;
}

.image>image{
  width: 100%;
  height: 100%;
  margin: 1%;
}

.loading{
  width: 100%;
  text-align: center;
  background-color: #efeff4;
  padding-top: 10px;
  font-size: 0.8em;
}

.newContent{
  position: fixed;
  right: 20px;
  bottom: 20px;
  width: 60px;
  height: 60px;
}