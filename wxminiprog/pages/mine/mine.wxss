/* pages/mine/mine.wxss */
.container{
  background-color: #efeff4;
  display: flex;
  flex-direction: column;
  align-items: flex-start; 
  justify-content: flex-start; 
}

.listitem,.listitem-div{
  width: 100%;
  height: 44px;
  background-color: white;
  text-align: left;
  line-height: 44px;
  padding-left: 20px;
}

.listitem,.changeNickname{
   margin-top: 2px; 
}

.listitem-div{
   margin-top: 20px; 
}

.userinfo{
  display: flex;
  flex-direction: row;
  height: 80px;
}

.usericon{
  width: 60px;
  height: 60px;
  /* margin-left:20px; */
  margin-top: 10px; 
}

.username{
  padding-left: 20px;
  line-height: 80px;
}

.changeNickname{
  background-color: white;
  width: 100%;
  display: flex;
  flex-direction: row;
  line-height: 44px;
  padding-left: 20px;
}

.changeNickname-input{
  height: 44px;
  line-height: 44px;
  width: 80%;
}

.changeNickname-btn{
  width: 20%;
}

.tip{
  font-size:12px;
  color: #BBBBBB;
  margin-left: 10px;
  margin-top: 5px;
}