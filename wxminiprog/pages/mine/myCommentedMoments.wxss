.maincontainer{
  width: 100%;
  height: 100vh;
  background-color: #efeff5;
}

.card{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 20px;
  background-color: #ffffff;
}

.card-top{
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  margin: 10px 0 0 0;
  /* background-color: sandybrown; */
}

.top-left{
  width: 44px;
  height: 44px;
  border-radius: 22px;
  margin-left: 10px;
  margin-right: 10px;
}

.top-right{
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  padding-top: 3px;
}

.top-name{
  font-size: 16px;
}

.top-time{
  font-size: 12px;
  color: #BBBBBB;
}

.moment-content{
  padding: 5px 10px 15px 10px;
}

.moment-image{
  width: 60%;
  height: 150px;
  margin-left: 10px;
}

.ori-moment{
  background-color: #c3c3c3;
  margin: 12px 10px;
  padding: 12px;
}

.loading{
  text-align: center;
  font-size: 12px;
  color: #BBBBBB;
}